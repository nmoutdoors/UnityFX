{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://unityfx.dev/schemas/unityfx-manifest.schema.json",
  "title": "UnityFX Manifest",
  "description": "Schema for UnityFX project manifest files",
  "type": "object",
  "required": ["schemaVersion", "unityfx", "patterns"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "schemaVersion": {
      "type": "string",
      "description": "Version of the manifest schema",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "unityfx": {
      "type": "object",
      "description": "UnityFX project metadata",
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "patterns": {
      "type": "array",
      "description": "List of patterns defined in this project",
      "items": {
        "type": "object",
        "required": ["id", "name", "category", "file"],
        "properties": {
          "id": { "type": "string", "description": "Unique pattern identifier" },
          "name": { "type": "string", "description": "Human-readable pattern name" },
          "category": {
            "type": "string",
            "enum": ["core", "installer", "data", "ui-shell", "ui", "ui-components", "dashboards", "forms", "experimental"],
            "description": "Pattern category"
          },
          "description": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["draft", "stable", "deprecated"],
            "default": "draft"
          },
          "file": { "type": "string", "description": "Path to pattern markdown file" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "inputs": { "type": "array", "items": { "type": "string" } },
          "outputs": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "apps": {
      "type": "array",
      "description": "List of apps built with UnityFX patterns",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "patterns": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdBy": { "type": "string" },
        "lastUpdatedBy": { "type": "string" },
        "notes": { "type": "string" }
      }
    }
  }
}

